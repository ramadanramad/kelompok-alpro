# Menghitung harga total pizza
if topping_keju.lower() == "ya":
    harga_topping_keju = 10.000

harga_total = harga_pizza + harga_toping + harga_crust + harga_size 

# Menampilkan ringkasan pesanan
print('\n==============================================================')
