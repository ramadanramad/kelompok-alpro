    pizza = "Pizza meatmonst"
    harga_pizza = 185.000
elif menu_pizza == 3:
    pizza = "Pizza meatmonsta"
    harga_pizza = 190.000
elif menu_pizza == 4:
    pizza = "Pizza super supreme"
    harga_pizza = 250.000
elif menu_pizza == 5:
    pizza = "Pizza super supreme chicken"
    harga_pizza = 300.000
